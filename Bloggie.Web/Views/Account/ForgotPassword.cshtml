@model Bloggie.Web.Models.ViewModels.LoginViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Forgot Password
            </h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> Invalid login attempt.
                </div>
            }

            @if (ViewBag.ErrorTitle != null && ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <h7 class="text-danger">@ViewBag.ErrorMessage</h7>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Old Password</label>
                    <input type="text" id="username" class="form-control" asp-for="UserName" required />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"
                        maxlength="30" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"
                        maxlength="30" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </form>

        </div>
    </div>
</div>
