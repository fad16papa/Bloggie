@model Bloggie.Web.Models.ViewModels.LoginViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> Invalid login attempt.
                </div>
            }

            @if (ViewBag.ErrorTitle != null && ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <h7 class="text-danger">@ViewBag.ErrorMessage</h7>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="UserName" required />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"
                        maxlength="30" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3 d-flex justify-content-center">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" id="loginBtn" class="btn btn-outline-primary">Login</button>
                        <a asp-asp-controller="Account" asp-action="ForgotPassword" class="text-center">Forgot
                            Password?</a>
                        <hr>
                        <a asp-asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google"
                            id="googleBtn" class="btn btn-outline-danger" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="Google"><i class="bi bi-google"></i>
                            Google </a>

                        <button type="button" id="githubBtn" class="btn btn-outline-dark" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="GitHub"><i class="bi bi-github"></i> Github </button>
                    </div>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
            </form>

        </div>
    </div>
</div>

<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
</script>
