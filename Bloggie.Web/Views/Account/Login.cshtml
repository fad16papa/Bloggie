@model Bloggie.Web.Models.ViewModels.LoginViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Login
            </h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> Invalid login attempt.
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="UserName" required />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"
                        maxlength="20" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between">
                    <div>
                        <button type="submit" id="loginBtn" class="btn btn-dark">Login</button>
                    </div>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <button type="button" id="googleBtn" data="google" class="btn btn-dark"><i
                                class="bi bi-google"></i></button>
                        <button type="button" id="githubBtn" data="github" class="btn btn-dark"><i
                                class="bi bi-github"></i></button>
                    </div>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
            </form>

        </div>
    </div>
</div>