@model Bloggie.Web.Models.ViewModels.PasswordChangeViewModel

@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Change Password
            </h1>

            @if (ViewBag.ErrorTitle != null && ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    <h7 class="text-danger">@ViewBag.ErrorMessage</h7>
                </div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" id="username" class="form-control" asp-for="Email" required />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"
                        maxlength="30" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" id="confirmPassword" class="form-control" asp-for="ConfirmPassword" required
                        minlength="6" maxlength="30" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="mb-3 mt-5 d-flex justify-content-center">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" id="loginBtn" class="btn btn-outline-primary">Change Password</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>